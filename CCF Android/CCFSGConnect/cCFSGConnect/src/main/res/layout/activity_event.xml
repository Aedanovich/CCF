<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    
	    <com.android.volley.toolbox.NetworkImageView
	        android:id="@+id/imageview_header"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scaleType="centerCrop" />
	    
	    <com.ccfsg.connect.views.RobotoTextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="marquee"
            android:gravity="left"
            android:textColor="@color/black"
            app:typeface="roboto_regular"
            android:textSize="24sp" />
	    
	    <com.ccfsg.connect.views.RobotoTextView
            android:id="@+id/textview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            app:typeface="roboto_light"
            android:textSize="18sp" />
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <com.ccfsg.connect.views.RobotoTextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	        	android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_regular"
	            android:text="@string/venue"
	            android:textSize="18sp" />
		    <com.ccfsg.connect.views.RobotoTextView
	            android:id="@+id/textview_venue"
	            android:layout_weight="60"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_light"
	            android:textSize="18sp" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <com.ccfsg.connect.views.RobotoTextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	        	android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_regular"
	            android:text="@string/date"
	            android:textSize="18sp" />
		    <com.ccfsg.connect.views.RobotoTextView
	            android:id="@+id/textview_date"
	            android:layout_weight="60"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_light"
	            android:textSize="18sp" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <com.ccfsg.connect.views.RobotoTextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	        	android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_regular"
	            android:text="@string/time"
	            android:textSize="18sp" />
		    <com.ccfsg.connect.views.RobotoTextView
	            android:id="@+id/textview_time"
	            android:layout_weight="60"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_light"
	            android:textSize="18sp" />
	    </LinearLayout>
	    
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <com.ccfsg.connect.views.RobotoTextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	        	android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:text="@string/member_price"
	            android:textColor="@color/black"
	            app:typeface="roboto_regular"
	            android:textSize="18sp" />
		    <com.ccfsg.connect.views.RobotoTextView
	            android:id="@+id/textview_member_price"
	            android:layout_weight="60"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_light"
	            android:textSize="18sp" />
	    </LinearLayout>
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <com.ccfsg.connect.views.RobotoTextView
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="40"
	        	android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_regular"
	            android:text="@string/guest_price"
	            android:textSize="18sp" />
		    <com.ccfsg.connect.views.RobotoTextView
	            android:id="@+id/textview_guest_price"
	            android:layout_weight="60"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dp"
	            android:textColor="@color/black"
	            app:typeface="roboto_light"
	            android:textSize="18sp" />
	    </LinearLayout>
	    
	    <com.ccfsg.connect.views.RobotoButton
            android:id="@+id/button_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:typeface="roboto_regular"
            android:textColor="@color/black"
            android:text="Join"
            android:visibility="gone"
            android:textSize="20sp" />
	</LinearLayout>
</ScrollView>